{
  "root": true,
  "ignorePatterns": [
    "projects/**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
        "quotes": [
          "warn",
          "single"
        ],
        "@typescript-eslint/member-delimiter-style": "warn"
      }
    }
  ]
}