{
  "name": "client-app",
  "productName": "DigiGoat",
  "author": {
    "name": "DigiGoat",
    "email": "DigiGoat@LilPilchuckCreek.org",
    "url": "https://github.com/DigiGoat"
  },
  "description": "An app to merge the gap between ADGA, your farm, and the internet.",
  "version": "4.1.5-beta.1",
  "main": "dist/main/main.js",
  "scripts": {
    "ng": "ng",
    "build": "run-p build:*",
    "build:main": "(rm -r dist/main || rmdir dist/main) ; tsc --project projects/main/tsconfig.json",
    "build:renderer": "(rm -r dist/renderer || rmdir dist/renderer) ; ng build renderer",
    "build:preload": "(rm -r dist/preload || rmdir dist/preload) ; webpack --config projects/preload/webpack.config.js",
    "build:windows:main": "tsc --project projects\\main\\tsconfig.json",
    "build:windows:renderer": "ng build renderer",
    "build:windows:preload": "webpack --config projects\\preload\\webpack.config.js",
    "serve:renderer": "ng serve renderer",
    "serve:renderer:wait": "wait-on http://localhost:4200",
    "start": "run-p build:main build:preload serve:renderer start:main",
    "start:main": "yarn serve:renderer:wait && electron-forge start",
    "package": "(rm -r out || rmdir out) ; run-p build:* && electron-forge package",
    "package:windows": "run-p build:windows:* && electron-forge package",
    "make": "(rm -r out || rmdir out) ; run-p build:* && electron-forge make",
    "publish:mac": "run-p build:* && electron-forge publish --arch universal",
    "publish:windows": "run-p build:windows:* && electron-forge publish",
    "test": "(rm -r coverage || rmdir coverage) ; run-p --continue-on-error 'test:* {@}' --",
    "test:main": "jest --config projects/main/jest.config.ts -w 6",
    "test:renderer": "ng test -w 6",
    "test:preload": "jest --config projects/preload/jest.config.ts -w 6",
    "ci:test": "(rm -r reports || rmdir reports) ; run-p --continue-on-error ci:test:*",
    "ci:test:main": "JEST_JUNIT_OUTPUT_DIR='reports/main' jest --config projects/main/jest.config.ts --ci --reporters=default --reporters=jest-junit",
    "ci:test:renderer": "JEST_JUNIT_OUTPUT_DIR='reports/renderer' ng test --ci --reporters=default --reporters=jest-junit",
    "ci:test:preload": "JEST_JUNIT_OUTPUT_DIR='reports/preload' jest --config projects/preload/jest.config.ts --ci --reporters=default --reporters=jest-junit",
    "lint": "run-p --continue-on-error 'lint:* {@}' --",
    "lint:renderer": "ng lint",
    "lint:main": "eslint projects/main",
    "lint:preload": "eslint projects/preload",
    "pull-check": "ts-node ./scripts/check.ts",
    "release": "ts-node ./scripts/release.ts",
    "fix-version": "ts-node ./scripts/version.ts"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.0.6",
    "@angular/cdk": "^19.0.5",
    "@angular/common": "^19.0.6",
    "@angular/compiler": "^19.0.6",
    "@angular/core": "^19.0.6",
    "@angular/forms": "^19.0.6",
    "@angular/platform-browser": "^19.0.6",
    "@angular/platform-browser-dynamic": "^19.0.6",
    "@angular/router": "^19.0.6",
    "adga": "^3.5.0",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "deep-object-diff": "^1.1.9",
    "electron-squirrel-startup": "^1.0.1",
    "fs-extra": "^11.2.0",
    "marked": "^14.1.2",
    "rxjs": "~7.8.0",
    "semver": "^7.6.2",
    "simple-git": "^3.24.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-builders/jest": "^19.0.0",
    "@angular-devkit/build-angular": "^19.0.7",
    "@angular-eslint/builder": "19.0.2",
    "@angular-eslint/eslint-plugin": "19.0.2",
    "@angular-eslint/eslint-plugin-template": "19.0.2",
    "@angular-eslint/schematics": "19.0.2",
    "@angular-eslint/template-parser": "19.0.2",
    "@angular/cli": "^19.0.7",
    "@angular/compiler-cli": "^19.0.6",
    "@electron-forge/cli": "^7.6.1",
    "@electron-forge/maker-dmg": "^7.6.1",
    "@electron-forge/maker-squirrel": "^7.6.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.6.1",
    "@electron-forge/publisher-github": "^7.6.1",
    "@electron-forge/shared-types": "^7.6.1",
    "@types/axios": "^0.14.0",
    "@types/bootstrap": "^5.2.10",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/node": "20.11",
    "@types/semver": "^7.5.8",
    "@types/webpack": "^5.28.5",
    "@typescript-eslint/eslint-plugin": "7.11.0",
    "@typescript-eslint/parser": "7.11.0",
    "chalk": "4",
    "electron": "^34.0.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.1.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "jest-junit.xml",
    "ancestorSeparator": " â€º ",
    "uniqueOutputName": "false",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  },
  "engines": {
    "node": "20.11"
  }
}