{
  "name": "client-app",
  "version": "0.0.0",
  "main": "dist/index.js",
  "scripts": {
    "ng": "ng",
    "build-main": "tsc --project projects/main/tsconfig.json",
    "build-renderer": "ng build renderer",
    "serve-renderer": "ng serve renderer",
    "wait-for-serve-renderer": "wait-on http://localhost:4200",
    "start": "yarn build-main & yarn serve-renderer & (yarn wait-for-serve-renderer && electron-forge start)",
    "package": "yarn build-main && yarn build-renderer && electron-forge package",
    "make": "yarn build-main && yarn build-renderer && electron-forge make",
    "publish-app": "yarn build-main && yarn build-renderer && electron-forge publish",
    "test": "yarn test-renderer",
    "test-renderer": "ng test -w 6",
    "test-renderer:ci": "ng test --ci --reporters=default --reporters=jest-junit",
    "test-renderer:watch": "ng test --watch",
    "test-renderer:file": "yarn test -u --test-path-pattern",
    "lint": "yarn lint-renderer & yarn lint-main",
    "lint-renderer": "ng lint",
    "lint-main": "eslint projects/main"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.3.0",
    "@angular/common": "^17.3.0",
    "@angular/compiler": "^17.3.0",
    "@angular/core": "^17.3.0",
    "@angular/forms": "^17.3.0",
    "@angular/platform-browser": "^17.3.0",
    "@angular/platform-browser-dynamic": "^17.3.0",
    "@angular/router": "^17.3.0",
    "electron-squirrel-startup": "^1.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-builders/jest": "^17.0.3",
    "@angular-devkit/build-angular": "^17.3.8",
    "@angular-eslint/builder": "17.5.2",
    "@angular-eslint/eslint-plugin": "17.5.2",
    "@angular-eslint/eslint-plugin-template": "17.5.2",
    "@angular-eslint/schematics": "17.5.2",
    "@angular-eslint/template-parser": "17.5.2",
    "@angular/cli": "^17.3.6",
    "@angular/compiler-cli": "^17.3.0",
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/publisher-github": "^7.4.0",
    "@electron-forge/shared-types": "^7.4.0",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "7.11.0",
    "@typescript-eslint/parser": "7.11.0",
    "electron": "^30.0.8",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.2",
    "wait-on": "^7.2.0"
  },
  "jest-junit": {
    "outputDirectory": "reports/renderer",
    "outputName": "jest-junit.xml",
    "ancestorSeparator": " â€º ",
    "uniqueOutputName": "false",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  }
}